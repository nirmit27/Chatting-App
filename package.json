{
  "name": "socket-io-chat-app",
  "version": "1.0.0",
  "description": "My first chatting app built with Socket.IO and Node.",
  "author": "Nirmit Mishra",
  "scripts": {
    "dev": "npm-run-all --parallel tailwind:watch start:server",
    "start:server": "node index.js",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./src/output.css --minify"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.1"
  }
}
